@model RegisterViewModel
@{
   ViewData["Title"] = "Регистрация";
}
<div class="container  d-flex flex-wrap justify-content-center mb-3 mt-3 p-4">
   <form class="border p-5" asp-antiforgery="true" asp-action="Register" asp-controller="Account">
      <div class="validation" asp-validation-summary="ModelOnly"></div>
      <div class="mb-3">
         <label asp-for="UserName"></label><br />
         <input asp-for="UserName" />
         <span asp-validation-for="UserName"></span>
      </div>
      <div class="mb-3">
         <label asp-for="Email"></label><br />
         <input asp-for="Email" />
         <span asp-validation-for="Email"></span>
      </div>
      <div class="mb-3">
         <label asp-for="Password"></label><br />
         <input asp-for="Password" />
         <span asp-validation-for="Password"></span>
      </div>
      <div class="mb-3">
         <input class="btn btn-sm btn-success" type="submit" value="Зарегистрироваться" />
      </div>
   </form>
</div>
@section scripts{
   <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
   <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}